{
  "name": "somov/yii2-model-files",
  "description": "Yii2 model files",
  "type": "yii2-extension",
  "keywords": [
    "yii2",
    "file",
    "model"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Somov",
      "email": "somov.nn@gmail.com"
    }
  ],
  "require": {
    "yiisoft/yii2": ">=2.0.14"
  },

  "require-dev": {
    "codeception/base": "^2.2.3",
    "codeception/verify": "~0.3.1",
    "codeception/specify": "~0.4.3",
    "phpunit/phpunit": "~5"
  },

  "autoload": {
    "psr-4": {
      "somov\\mfiles\\": "src"
    }
  },

  "autoload-dev": {
    "classmap": [
      "tests/unit/"
    ]
  },

  "archive": {
    "exclude": [
      "/.*",
      "/tests",
      "/vendor",
      "/bin"
    ]
  },

  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "process-timeout": 1800,
    "fxp-asset": {
      "enabled": false
    }
  }

}
